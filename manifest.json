{
  "manifest_version": 3,
  "name": "ImpulseGuard",
  "version": "1.0",
  "description": "Restrict distracting tabs and enforce focus sessions.",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "resources/icons/extension_icon.png",
      "32": "resources/icons/extension_icon.png",
      "48": "resources/icons/extension_icon.png",
      "128": "resources/icons/extension_icon.png"
    }
  },
  "icons": {
    "16": "resources/icons/extension_icon.png",
    "32": "resources/icons/extension_icon.png",
    "48": "resources/icons/extension_icon.png",
    "128": "resources/icons/extension_icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": 
      ["resources/icons/default_icon.png"
,      "blocked/blocked.html",
      "visionboard/visionboard.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

{
  "manifest_version": 3,
  "name": "ImpulseGuard",
  "version": "1.0",
  "description": "Restrict distracting tabs and enforce focus sessions.",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "resouces/head.png",
      "32": "resouces/head.png",
      "48": "resouces/head.png",
      "128": "resouces/head.png"
    }
  },
  "icons": {
    "16": "resouces/head.png",
    "32": "resouces/head.png",
    "48": "resouces/head.png",
    "128": "resouces/head.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
